@model Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">

                            <input type="hidden" asp-for="ExperienceId" />

                            <label> Deneyim Başlığı & Firma Bilgisi</label>
                            <input type="text" class="form-control" asp-for="Head" />
                            <br />


                            <label> Çalışılan Pozisyon </label>
                            <input type="text" class="form-control" asp-for="Title" />
                            <br />


                            <label> Tarih Aralığı </label>
                            <input type="text" class="form-control" asp-for="Date" />
                            <br />


                            <label> Açıklama </label>
                            <textarea rows="4" class="form-control" asp-for="Description"> </textarea>
                            <br />

                            <button class="btn btn-warning">Deneyimi Güncelle</button>




                        </form>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

