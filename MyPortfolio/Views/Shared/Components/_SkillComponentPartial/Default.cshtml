@model List<MyPortfolio.DAL.Entities.Skill>

<div class="row" style="font-family:'Segoe UI', sans-serif;">
    <div class="col-six tab-full">
        <h3 style="margin-bottom:25px;">I've Got Some Skills.</h3>
        <ul class="skill-bars" style="padding:0; margin:0;">
            @foreach (var item in Model.Take(Model.Count / 2))
            {
                var color = "";
                if (item.Value > 85)
                {
                    // Açık toprak tonu (bej/kremsi)
                    //color = "background-color:rgba(210,180,140,0.7);"; // Tan
                    color = "background-color:rgba(139,69,19,0.7);"; // SaddleBrown
                }
                else if (item.Value >= 70)
                {
                    // Orta kahverengi
                    color = "background-color:rgba(160,82,45,0.7);"; // Sienna
                }
                else
                {
                    // Koyu toprak kırmızısı
                    color = "background-color:rgba(210,180,140,0.7);"; // Tan
                }


                <li style="margin-bottom:40px; list-style:none;">
                    <!-- boşluk arttırıldı -->
                    <div style="width:@item.Value%; height:30px; border-radius:8px; @color position:relative; transition:width 0.6s ease;">
                        <strong style="position:absolute; left:12px; top:3px; color:#fff; font-size:15px; font-weight:500;">
                            @item.Title
                        </strong>
                        <span style="position:absolute; right:8px; top:3px;
                                             background-color:rgba(0,0,0,0.3);
                                             padding:2px 5px; border-radius:4px;
                                             font-size:11px; color:#fff;">
                            <!-- kutu küçültüldü -->
                            @item.Value%
                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>

    <div class="col-six tab-full">
        <h3 style="visibility:hidden;">I've Got Some Skills.</h3>
        <ul class="skill-bars" style="padding:0; margin:0;">
            @foreach (var item in Model.Skip(Model.Count / 2))
            {
                var color = "";
                if (item.Value > 85)
                {
                    // Açık toprak tonu (bej/kremsi)
                    color = "background-color:rgba(139,69,19,0.7);"; // SaddleBrown

                }
                else if (item.Value >= 70)
                {
                    // Orta kahverengi
                    color = "background-color:rgba(160,82,45,0.7);"; // Sienna
                }
                else
                {
                    // Koyu toprak kırmızısı
                    color = "background-color:rgba(210,180,140,0.7);"; // Tan
                }



                <li style="margin-bottom:40px; list-style:none;">
                    <div style="width:@item.Value%; height:30px; border-radius:8px; @color position:relative; transition:width 0.6s ease;">
                        <strong style="position:absolute; left:12px; top:3px; color:#fff; font-size:15px; font-weight:500;">
                            @item.Title
                        </strong>
                        <span style="position:absolute; right:8px; top:3px;
                                             background-color:rgba(0,0,0,0.3);
                                             padding:2px 5px; border-radius:4px;
                                             font-size:11px; color:#fff;">
                            @item.Value%
                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
