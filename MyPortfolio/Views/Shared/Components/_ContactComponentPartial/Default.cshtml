@model MyPortfolio.Models.ContactFormModel

<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>Contact</h3>
            <h1>Say Hello.</h1>
            <p class="lead">I’m always happy to connect. Drop me a message!</p>
        </div>
    </div>

    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
            <form id="contactForm">
                <fieldset>
                    <div class="form-field">
                        @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", @class = "full-width", minlength = "2", required = "required" })
                    </div>
                    <div class="form-field">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "full-width", type = "email", required = "required" })
                    </div>
                    <div class="form-field">
                        @Html.TextBoxFor(m => m.Subject, new { placeholder = "Subject", @class = "full-width" })
                    </div>
                    <div class="form-field">
                        @Html.TextAreaFor(m => m.Message, new { placeholder = "Message", rows = "10", cols = "50", @class = "full-width", required = "required" })
                    </div>
                    <div class="form-field">
                        <button type="submit" class="full-width btn--primary">Submit</button>
                        <div class="submit-loader" style="display:none;">
                            <div class="text-loader">Sending...</div>
                            <div class="s-loader">
                                <div class="bounce1"></div>
                                <div class="bounce2"></div>
                                <div class="bounce3"></div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>

            <div id="formMessage" style="margin-top:15px; font-weight:bold; display:none;"></div>
        </div>

        <div class="col-four tab-full contact__infos">
            <h4 class="h06">Phone</h4>
            <p>Phone: (+90) 536 519 4977<br></p>

            <h4 class="h06">Email</h4>
            <p>feridegnduz@gmail.com<br></p>

            <h4 class="h06">Address</h4>
            <p>İSTANBUL<br><br></p>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(function () {
        $("#contactForm").submit(function (e) {
            e.preventDefault(); // formun normal submit olmasını engelle

            $(".submit-loader").show();

            $.ajax({
                url: '@Url.Action("Send", "Contact")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    $("#formMessage")
                        .css("color", response.color)
                        .text(response.message)
                        .fadeIn();

                    $("#contactForm")[0].reset(); // formu temizle
                    $(".submit-loader").hide();

                    // 5 saniye sonra mesaj kaybolur
                    setTimeout(function () {
                        $("#formMessage").fadeOut();
                    }, 5000);
                },
                error: function () {
                    $("#formMessage")
                        .css("color", "red")
                        .text("Something went wrong. Please try again.")
                        .fadeIn();
                    $(".submit-loader").hide();
                }
            });
        });
    });
</script>
